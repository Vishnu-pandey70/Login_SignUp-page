<!DOCTYPE html>
<html>
<head>
    <title>Animated Registration Form</title>
    <!-- Link Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .wave {
            position: fixed;
            bottom: 0;
            left: 0;
            height: 100%;
            z-index: -1;
        }
           .custom-avatar {
            max-width: 100px;
            width: auto;
            margin-left: 120px;
        }

        .custom-input {
            width: 350px;
        }
    </style>
</head>
<body>
    <img class="wave" src="wave.png">
    <div class="container">
        <div class="row" style="margin-top: 100px;">
            <div class="col-lg-6 d-flex justify-content-end align-items-center">
                <img src="bg.svg" style="max-width: 530px;">
            </div>
                    <div class="col-lg-6 d-flex justify-content-center align-items-center">
                        <form action="/register" method="POST" onsubmit="return validateForm()">
                            <img src="avatar.svg" class="mb-4 custom-avatar">
                            <h1 class="mb-4 text-center">Welcome</h1>
                            <div class="mb-4 custom-input">
                                <div class="input-group">
                                    <span class="input-group-text  border-0 border-bottom"><i class="fas fa-user"></i></span>
                                    <input class="form-control  border-0 border-bottom" type="text" name="name" placeholder="Username">

                                </div>
                            </div>
                            <div class="mb-4 custom-input">
                                <div class="input-group">
                                    <span class="input-group-text  border-0 border-bottom"><i class="fas fa-lock"></i></span>
                                    <input type="email" class="form-control  border-0 border-bottom" placeholder="E-mail" name="email">
                                </div>
                            </div>
                            <div class="mb-4 custom-input">
                                <div class="input-group">
                                    <span class="input-group-text  border-0 border-bottom"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control  border-0 border-bottom" placeholder="password" name="password" id="pass">
                                </div>
                            </div>
                            <div class="mb-4 custom-input">
                                <div class="input-group">
                                    <span class="input-group-text  border-0 border-bottom"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control  border-0 border-bottom" placeholder="Confrim password" name="password1" id="pass1">
                                    <p id="password-error" style="color: red;"></p>
                                </div>
                            </div>
                            <a href="#" class="d-block text-end mb-3">Forgot Password?</a>
                            <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg ">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
    </div>

    <script>
        function validateForm() {
            var password = document.getElementById("pass").value;
            var confirmPassword = document.getElementById("pass1").value;
            var errorElement = document.getElementById("password-error");
    
            if (password !== confirmPassword) {
                errorElement.textContent = "Password and Confirm Password do not match.";
                return false;
            } else {
                errorElement.textContent = "";
                return true;
            }
        }
    </script>
</body>
</html>
